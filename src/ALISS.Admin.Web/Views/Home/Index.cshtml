@using System.Configuration
@{
	ViewBag.Title = "My Dashboard";

	bool enableMonsidoTracking = ConfigurationManager.AppSettings["Settings:EnableMonsidoTracking"] != null
			? ConfigurationManager.AppSettings["Settings:EnableMonsidoTracking"].ToString().ToLower() == "true"
			: false;
}

@Html.Partial("_ClaimsDisclaimer")

<h2>Management</h2>

<div class="aliss-component-master aliss-component-descriptive-blocks">
    @if ((bool)ViewBag.IsAdmin == false)
    {
        <div class="aliss-organism aliss-component-master">
            <div class="aliss-component-master__contents">
                <h3>
                    @Html.ActionLink("All Organisations", "AllOrganisations", "Organisation")
                </h3>
                <p>View all organisations registered in ALISS</p>
            </div>
        </div>

        <div class="aliss-organism aliss-component-master">
            <div class="aliss-component-master__contents">
                <h3>
                    @Html.ActionLink("All Services", "AllServices", "Service")
                </h3>
                <p>View all services registered in ALISS</p>
            </div>
        </div>

        <div class="aliss-organism aliss-component-master">
            <div class="aliss-component-master__contents">
                <h3>
                    @Html.ActionLink("My Claims", "MyClaims", "Claim")
                </h3>
                <p>View and manage your claims submitted for organisations</p>
            </div>
        </div>

        <div class="aliss-organism aliss-component-master">
            <div class="aliss-component-master__contents">
                <h3>
                    @Html.ActionLink("My Organisations", "Index", "Organisation")
