            </div>
        </div>

        <div class="aliss-organism aliss-component-master">
            @if (enableMonsidoTracking)
            {
                <div class="aliss-component-master__contents">
                    <h3>
                        @Html.ActionLink("Unpublished Forms", "Index", "AddToALISS", new { w = "f" }, new { @onclick = "window.monsido_functions.trackEvent('Unpublished Forms', 'Unpublished Forms from Dashboard', 'Navigate to Pick up where you left off', 1);" })
                    </h3>
                    <p>Pick up where you left off.</p>
                </div>
            }
