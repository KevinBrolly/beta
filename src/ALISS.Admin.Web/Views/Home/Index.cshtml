            {
                <div class="aliss-component-master__contents">
                    <h3>
                        @Html.ActionLink("Unpublished Forms", "Index", "AddToALISS", new { w = "f" }, null)
                    </h3>
                    <p>Pick up where you left off.</p>
                </div>
            }
        </div>
        <div class="aliss-organism aliss-component-master">
            <div class="aliss-component-master__contents">
                <h3>
                    @Html.ActionLink("Claims", "Index", "Claim")
                </h3>
                <p>View and manage all claims submitted for organisations within the ALISS system.</p>
            </div>
        </div>
        <div class="aliss-organism aliss-component-master">
