@model ALISS.Admin.Web.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send Code";
}

<h1>@ViewBag.Title</h1>
<p>Send verification code</p>
@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)

    <fieldset class="aliss-form__fieldset">
        <legend class="aliss-form__legend">Use a local account to log in.</legend>

        <div class="aliss-form__group">
            Select Two-Factor Authentication Provider:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
        </div>

    </fieldset>
    <div class="aliss-form__actions">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
