{% extends "layout.njk" %}

{# Global variables #}
  {# 
    Access to atom, molecule and organism paths.
  #}
  {% import "../partials/include/globalVariables.njk" as GV %}
{# Global variables #}

{# Page variables #}
  {# 
    Page meta data:
    If specified, this will populate meta tags for page SEO.
  #}
    {% set page_Meta_Title = 'Dashboard' %}
    {% set page_Meta_Description = '' %}
    {% set page_Meta_Keywords = '' %}
  {# 
    Page styles:
    Utilise Atoms, Molecules and Organisms to create templates.
  #}
  {% set page_Styles = false %}
  {# 
    Page body ID & class:
    If specified, this id and or class will be applied to the body tag.
  #}
    {% set page_Body_ID = 'aliss-admin' %}
    {% set page_Body_Class = 'aliss-admin' %}
  {# 
    Page ID & class:
    If specified, this class will be applied to top level parent tag of this page, containing all of the componets within the page contents.
  #}
  {% set page_ID = '' %}
  {% set page_Class = '' %}
{# Page variables #}

{% block body %}

  <form>
  <fieldset class="aliss-form__fieldset">
      <legend class="aliss-form__legend">Creation of new Collection</legend>
      <div class="aliss-form__group">
        <label class="aliss-form__label" for="collection">Create new collection</label>
        <div class="aliss-form__collections">
          <input class="aliss-form__input" id="collection" name="collection" type="text" placeholder="Name of collection" autocomplete="off">
          <button class="btn btn--primary aliss-form__collections-btn" type="submit">Add Collection</button>
        </div>
      </div>
  </fieldset>
  </form>

  <table class="aliss-table">
    <thead class="aliss-table__head">
      <tr class="aliss-table__row aliss-table__row--head">
        <th class="aliss-table__header" scope="col">Name of collection</th>
        <th class="aliss-table__header" scope="col" width="15%">Number of services</th>
        <th class="aliss-table__header" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody class="aliss-table__body">
      <tr class="aliss-table__row aliss-table__row--body">
        <td class="aliss-table__cell"><a href="#">My saved services</a></td>
        <td class="aliss-table__cell">0</td>
        <td class="aliss-table__cell">
          <a href="/">Email collection</a>
        </td>
      </tr>
      <tr class="aliss-table__row aliss-table__row--body">
        <td class="aliss-table__cell"><a href="#">Custom Collection Title</a></td>
        <td class="aliss-table__cell">12</td>
        <td class="aliss-table__cell">
          <ul class="aliss-icon-list aliss-icon-list--inline">
              <li class="aliss-icon-list__item aliss-icon-list__item--email">
                  <a href="">
                      Email <span class="hide">##CollectionName##</span> collection
                  </a>
              </li>
              <li class="aliss-icon-list__item aliss-icon-list__item--trash red">
                  <a href="#">
                      Remove <span class="hide">##CollectionName##</span> service
                  </a>
              </li>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="aliss-pagination-component">
    <div class="aliss-pagination-component__wrapper">
      <div class="aliss-pagination-component__wrapper__item">
        <p>Showing page <span>1</span> of <span>10</span></p>
      </div>
      <div class="aliss-pagination-component__wrapper__item">
        <nav>
          <ol>
            <li>
              <a href="" class="aliss-pagination-previous">Previous</a>
            </li>
            <li>
              <a href=""  class="js-pagination-previous-page">2</a>
            </li>
            <li>
              <a href=""  class="js-pagination-previous-page">3</a>
            </li>
            <li>
              <a href=""  class="js-pagination-previous-page">4</a>
            </li>
            <li class="js-pagination-hidden">
                <a href="/search/index?page=@i&postcode=@Model.Postcode@url">
                    @i
                </a>
            </li>
            <li>
                <a href="" class="aliss-pagination-next">
                    Next
                </a>
            </li>
          </ol>
        </nav>
    </div>
  </div>

{% endblock %}