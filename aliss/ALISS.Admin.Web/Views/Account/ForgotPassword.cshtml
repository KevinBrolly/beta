@model ALISS.Admin.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password or username?";
    Layout = "~/Views/Shared/_LayoutLoggedOut.cshtml";
}

<h1>@ViewBag.Title</h1>
<p>Enter your email.</p>
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Notes)
    <fieldset class="aliss-form__fieldset">
        <legend class="aliss-form__legend">Enter your email.</legend>
        <div class="aliss-form__group">
            @Html.LabelFor(m => m.Email, new { @class = "aliss-form__label"} )
            @Html.TextBoxFor(m => m.Email, new { @class = "aliss-form__input", autocomplete = "on" })
        </div>
    </fieldset>
    <div class="aliss-form__actions">
        <input type="submit" class="btn btn--primary" value="Email Link" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
